<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_game_latlngdisplay">

        <TextView android:id="@+id/textview_game_latlngbounds"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />


    </RelativeLayout>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.android.mobileproject.GameActivity"
        android:layout_weight="@integer/weight_game_map"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_game_latlngdisplay"
        android:layout_weight="@integer/weight_game_logout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/game_logoutbutton"
            android:onClick="logout"/>
    </RelativeLayout>



</LinearLayout>
